---
// src/components/BlogList.astro
import FormattedDate from './FormattedDate.astro';
import { parseInlineMarkdown } from '../utils/markdown';
const { posts } = Astro.props;
---
<section>
  <h2>Recent Posts</h2>
  <ul class="item-groups">
    {posts.map((entry) => (
      <li>
        <FormattedDate date={entry.data.date} />
        <a href={`/${entry.slug.replace(/^\d{4}-\d{2}-\d{2}-/, '')}`}>
          <span class="title" set:html={parseInlineMarkdown(entry.data.title)} />
        </a>
        {entry.data.description && <p>{entry.data.description}</p>}
      </li>
    ))}
  </ul>
</section>
